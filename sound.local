local currentSound = nil

local function PlayMusic(soundId, songName)
    if currentSound then
        currentSound:Stop()
        currentSound:Destroy()
    end
    
    local sound = Instance.new("Sound")
    sound.SoundId = "rbxassetid://" .. soundId
    sound.Looped = true
    sound.Volume = 0.5
    sound.Parent = SoundService
    sound:Play()
    
    currentSound = sound
    print("üéµ –°–µ–π—á–∞—Å –∏–≥—Ä–∞–µ—Ç: " .. (songName or soundId))
    return sound
end

