local SoundService = game:GetService("SoundService")
local TweenService = game:GetService("TweenService")

-- –¶–≤–µ—Ç–æ–≤–∞—è —Å—Ö–µ–º–∞ Saul Hub
local SAUL_COLORS = {
    Background = Color3.fromRGB(25, 25, 35),
    Header = Color3.fromRGB(45, 35, 60),
    Button = Color3.fromRGB(65, 45, 85),
    ButtonHover = Color3.fromRGB(85, 65, 105),
    ButtonSuccess = Color3.fromRGB(80, 180, 80),
    ButtonError = Color3.fromRGB(220, 80, 80),
    Text = Color3.fromRGB(255, 255, 255),
    Accent = Color3.fromRGB(140, 70, 160),
    Search = Color3.fromRGB(40, 40, 55)
}

local currentSound = nil

local function PlayMusic(soundId, songName)
    if currentSound then
        currentSound:Stop()
        currentSound:Destroy()
    end
    
    local sound = Instance.new("Sound")
    sound.SoundId = "rbxassetid://" .. soundId
    sound.Looped = true
    sound.Volume = 0.5
    sound.Parent = SoundService
    sound:Play()
    
    currentSound = sound
    print("üéµ –°–µ–π—á–∞—Å –∏–≥—Ä–∞–µ—Ç: " .. (songName or "ID: " .. soundId))
    return sound
end

