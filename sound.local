local function CreateSongButton(songId, songName, position)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0.48, 0, 0, 40)
    button.Position = position
    button.BackgroundColor3 = SAUL_COLORS.Button
    button.TextColor3 = SAUL_COLORS.Text
    button.Text = songName
    button.Font = Enum.Font.Gotham
    button.TextSize = 11
    button.TextWrapped = true
    button.Parent = SongsFrame
    
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 6)
    corner.Parent = button
    
    button.MouseButton1Click:Connect(function()
        PlayMusic(songId, songName)
        InputBox.Text = songId
    end)
    
    return button
end

-- –î–æ–±–∞–≤–ª—è–µ–º –ø–µ—Å–Ω–∏ –∏–∑ –±–∏–±–ª–∏–æ—Ç–µ–∫–∏
local songIndex = 1
for songId, songName in pairs(MusicLibrary) do
    local position = UDim2.new(0, 0, 0, (songIndex-1)*45)
    if songIndex > 1 then
        position = UDim2.new(0.52, 0, 0, (songIndex-2)*45)
    end
    CreateSongButton(songId, songName, position)
    songIndex = songIndex + 1
end

